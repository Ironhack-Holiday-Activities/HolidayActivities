<title>Acivities List</title>
<div class="list-content">
    <h2>Acivities List</h2>

    <div class="list">
        {{#each activities}}
            <div class="activity">
            {{title}}
            {{description}}
            {{author.username}}
            {{meetingPoint}}

            <a href="/details">Details</a>
            <a href="/edit">Edit</a>
            <form action="/activities/{{id}}/delete" method="POST">
                <button>Delete</button>
            </form>
            </div>
        {{/each}}
    </div>
</div>
